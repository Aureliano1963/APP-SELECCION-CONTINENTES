<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#058FFD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SELECCIONAR UNO O MAS CONTINENTES"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_above="@id/btnSelect"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OPCIONES DE VISTA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rbtnSeleccion"
            android:layout_width="match_parent"
            android:layout_height="192dp">

            <RadioButton
                android:id="@+id/rbtnRios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RIOS"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtnLagos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAGOS"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtnVolcanes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VOLCANES"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TIPO DE INFORMACION"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/gruopRadioCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rbtnRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BOTONES DE RADIO"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbtnCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BOTONES CHECK  BOX"
                    android:textStyle="bold" />
            </RadioGroup>
        </RadioGroup>

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#593A91"
            android:text="SELECCIONAR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#735F97"
            android:text="REGRESAR"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>